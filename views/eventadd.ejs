<%- include("header") -%>
<link rel="stylesheet" href="/public/css/eventadd.css">

        <div class="event-page-banner-container">
            <div class="text-overlay-container">
                <div class="text-overlay-text">
                    Add your next event
                </div>
            </div>
        </div>

        <form action="/eventadd" method="POST" class="mx-5">
            <div class="row mb-3">
              <label class="col-sm-2 col-form-label">Name of Event</label>
              <div class="col-sm-10">
                <input type="text" name="eventName" placeholder="Enter the event Name" class="form-control" value="<%=eventOld.eventName%>" required>
              </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Club Organising</label>
                <div class="col-sm-10">
                  <input type="text" name="eventOrg" placeholder="Orginiser Name" class="form-control" value="<%=eventOld.eventOrg%>">
                </div>
              </div>
              <div class="row mb-3">
                <label class="col-sm-2 col-form-label">When's the event?</label>
                <div class="col-sm-10">
                  <input type="date" name="eventDate" placeholder="Enter the date you want to oragnise it" class="form-control" value="<%=eventOld.eventDate%>">
                </div>
              </div>
              <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Guest of the Event</label>
                <div class="col-sm-10">
                  <input type="text" name="eventGuest" placeholder="Guest Name" class="form-control"value="<%= eventOld.eventGuest %>" >
              
                </div>
              </div>
              <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Event Starting Time</label>
                <div class="col-sm-10">
                  <input type="time" name="eventStartTime" min="09:00" max="16:00" class="form-control" value="<%= eventOld.eventStartTime %>">
                </div>
              </div>
              <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Event Ending Time</label>
                <div class="col-sm-10">
                  <input type="time" name="eventEndTime" min="09:00" max="16:00" class="form-control" value="<%= eventOld.eventEndTime %>">
                </div>
              </div>
              <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Event Description</label>
                <div class="col-sm-10">
                  <textarea name="eventDesc" class="form-control" cols="30" rows="10"></textarea>
                </div>
              </div>
            <a href="/events" class="btn btn-warning">Cancel</a>
            <button type="submit" class="btn btn-info center">Submit</button>
          </form>
    </body>
</html>
        